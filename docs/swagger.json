                }
              }
            }
          }
        }
      }
    },
    "/sales": {
      "get": {
        "tags": ["sales"],
        "security": [
          {
            "BearerAuth": []
          },
          {}
        ],
        "parameters": [
          {
            "name": "order",
            "in": "query",
            "description": "Orden de la lista",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["price", "title", "discount"]
            }
          },
          {
            "name": "q",
            "in": "query",
            "description": "Busqueda por titulo",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de ofertas",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SalesResponse"
                }
              }
            }
          }
        }
      },
